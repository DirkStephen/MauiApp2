<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <ScrollView>
        <HorizontalStackLayout
            Spacing="10">
            
            <VerticalStackLayout>
                <ImageButton
                    x:Name="imgBtn1"
                    Source="expect1.jpg"
                    Clicked="OnImageButton1Clicked"
                    HeightRequest="150"/>
                <Label
                    x:Name="expectation1"/>
            </VerticalStackLayout>
            
            <VerticalStackLayout>
                <ImageButton
                    x:Name="imgBtn2"
                    Source="expect2.png"
                    Clicked="OnImageButton2Clicked"
                    HeightRequest="150"/>
                <Label
                    x:Name="expectation2"/>
            </VerticalStackLayout>
            
        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
